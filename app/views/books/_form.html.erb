<%= form_with(model: @book, local: true, class: 'needs-validation', novalidate: true) do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      Please provide a title.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :author, class: 'form-label' %>
    <%= form.text_field :author, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      Please provide an author.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :body, class: 'form-label' %>
    <%= form.text_area :body, class: 'form-control', rows: 5, required: true %>
    <div class="invalid-feedback">
      Please provide some text for the book.
    </div>
  </div>

  <div class="mb-3 form-check">
    <%= form.check_box :is_taken, class: 'form-check-input' %>
    <%= form.label :is_taken, class: 'form-check-label' %>
  </div>

  <%= form.submit 'Create Book', class: 'btn btn-primary' %>
<% end %>